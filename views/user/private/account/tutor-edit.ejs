<% include ../../../partials/header %>
<!-- Include CSS/Scripts -->
<link rel="stylesheet" href="/stylesheets/user/private/account/tutor-edit.css">
<script src="/scripts/user/private/account/tutor-edit.js" type="text/javascript"></script>

<!-- Start -->
<div class="tutorEdit">
  <div class="container">
    <div class="left">
        <div class="userBox">
          <img src="<%= User.profilePhoto %>" alt="<%= User.firstName %>">
          <h4><b><%= User.firstName %></b></h4>
          <a href="/user/<%= User.slug %>"><h4>View Public Profile</h4></a>
        </div>
        <div class="leftPanel">
          <li id="edit"><a href="/edit-profile"><h4>Edit Profile</h4></a></li>
          <li id="photo"><a href="/upload-photo"><h4>Profile Photo</h4></a></li>
          <% if(User.isTutor) { %>
            <li id="tutor"><a href="/edit-tutor"><h4><b>Tutor Profile</b></h4></a></li>
          <% }; %>
        </div>
    </div>
    <div class="right">
        <h3 id="editTutor"><b>Tutor Profile</b></h3>
        <br>
        <form class="edit" action="/edit-tutor?_method=PUT" method="POST">
          <div class="tutor">
            <h4 id="information">Tutor Information</h4>
                <div class="formBox">
                  <label for="tutorExperience"><h4>Do you have any experience with tutoring?</h4></label>
                  <textarea type="text" name="tutorExperience" rows="4" cols="90"><%= User.tutorExperience %></textarea>
                </div>
                <!-- <div class="formBox">
                  <label for="travel"><h4>Are you willing to travel for tutoring?</h4></label>
                  <div class="inputSection">
                    <select name="travel">
                      <option value="" selected disabled hidden>Click to select</option>
                      <option value="Yes">Yes</option>
                      <option value="No">No</option>
                    </select>
                  </div>
                </div> -->
                <div class="formBox">
                  <label for="school"><h4>Preferred locations for teaching</h4></label>
                  <div class="inputSection">
                    <input id="teachingLocations" type="text" placeholder="Add location" value=''>
                    <div class="addBtn"><h4>Add Location</h4></div>
                    <% if(User.teachingLocations && User.teachingLocations.length > 0) { %>
                      <ul id="teachingLocations-ul">
                        <% User.teachingLocations.forEach(function(teachingLocations) { %>
                          <li><div><i class='fas fa-trash-alt'></i></div><input type='text' name='teachingLocations' value='<%= teachingLocations %>' maxlength='150'></li>
                        <% }) %>
                      </ul>
                    <% } else { %>
                      <ul id="teachingLocations-ul" class="no-display"></ul>
                    <% } %>
                  </div>
                </div>
          </div>

          <button type="submit"><b>Save</b></button>
        </form>
    </div>

  </div>
</div>

<% include ../../../partials/footer %>
