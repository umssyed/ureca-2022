<% include ../../../partials/header %>
<!-- Include CSS/Scripts -->
<link rel="stylesheet" href="/stylesheets/user/private/account/upload-photo.css">
<script src="/scripts/user/private/account/profile-edit.js" type="text/javascript"></script>

<!-- Start -->
<div class="profilePhoto">
  <div class="container">
    <div class="left">
        <div class="userBox">
          <img src="<%= User.profilePhoto %>" alt="<%= User.firstName %>">
          <h4><b><%= User.firstName %></b></h4>
          <a href="/user/<%= User.slug %>"><h4>View Public Profile</h4></a>
        </div>
        <div class="leftPanel">
          <li id="edit"><a href="/edit-profile"><h4>Edit Profile</h4></a></li>
          <li id="photo"><a href="/upload-photo"><h4><b>Profile Photo</b></h4></a></li>
          <% if(User.isTutor) { %>
            <li id="tutor"><a href="/edit-tutor"><h4>Tutor Profile</h4></a></li>
          <% }; %>
        </div>
    </div>
    <div class="right">
        <h3 id="editProfile"><b>Profile Photo</b></h3>
        <br>
        <form class="edit" action="/upload-photo" method="POST" enctype="multipart/form-data">
          <div class="required">
            <img class="currentPhoto" src="<%= User.profilePhoto %>" alt="">
            <h4 id="required">Upload New Photo</h4>
            <input required type="file" name="image">
          </div>
          <button type="submit"><b>Upload</b></button>
        </form>
        <% if(User.profilePhoto !== '/assets/icons/profileDefault.png') { %>
          <form class="revert" action="/upload-photo/delete" method="POST">
              <button type="submit" name="delete"><b>Delete Photo</b></button>
          </form>
        <% } %>

    </div>

  </div>
</div>

<% include ../../../partials/footer %>
