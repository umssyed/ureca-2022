<% include ../../../partials/header %>
<!-- Include CSS/Scripts -->
<link rel="stylesheet" href="/stylesheets/user/private/blackboard/reviews-tutor.css">

<!-- Start -->
<div class="blackboard">
  <div class="banner">
    <div class="container">
      <h1>Blackboard</h1>
      <div class="links">
          <li><a href="/blackboard"><h4>Overview</h4></a></li>
          <li><a href="/blackboard/tutor"><h4>Tutor</h4></a></li>
          <li><a href="/blackboard/student"><h4>Student</h4></a></li>
          <li id="selected"><a href="/blackboard/tutor-reviews"><h4>Reviews</h4></a></li>
      </div>
    </div>
  </div>

  <div class="tutor-review">
    <div class="container">
      <div class="left">
        <h4 id="selected_link"><a href='/blackboard/tutor-reviews'>Tutor reviews</a></h4>
        <h4><a href='/blackboard/class-reviews'>Class reviews</a></h4>
      </div>

      <div class="right">
        <div class="tutor-review-links">
          <select onchange="javascript:location.href = this.value;">
            <option value="tutor-reviews" selected>Available Reviews</option>
            <option value="tutor-reviews-posted">Posted Reviews</option>
          </select>
        </div>
        <br>
        <div class="tutorReviewBox">
          <% if(availableReviews.length < 1) { %>
            <h4>Nothing available to review yet.</h4>
          <% } %>
          <% if(availableReviews.length > 0) { %>
            <% availableReviews.forEach(function(reviews){ %>
              <a href="/user/<%= reviews.slug %>/reviews">
                <div class="tutorReview">
                  <div class="top">
                    <img src="<%= reviews.profilePhoto %>" alt="tutorimage">
                  </div>
                  <div class="bottom">
                    <h4><b><%= reviews.firstName %> <%= reviews.lastName %></b></h4>
                    <h4 id="small"><small>Leave a review</small></h4>
                  </div>
                </div>
              </a>
            <% }); %>
          <% } %>
        </div>

      </div>
    </div>
  </div>
</div>



<% include ../../../partials/footer %>
<script src="/scripts/class/allclasses.js" type="text/javascript"></script>
