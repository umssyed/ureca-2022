<% include ../../../partials/header %>
<!-- Include CSS/Scripts -->
<link rel="stylesheet" href="/stylesheets/user/private/blackboard/reviews-posted-class.css">
<script src="/scripts/user/publicprofile.js" type="text/javascript"></script>

<!-- Start -->
<div class="blackboard">
  <div class="banner">
    <div class="container">
      <h1>Blackboard</h1>
      <div class="links">
          <li><a href="/blackboard"><h4>Overview</h4></a></li>
          <li><a href="/blackboard/tutor"><h4>Tutor</h4></a></li>
          <li><a href="/blackboard/student"><h4>Student</h4></a></li>
          <li id="selected"><a href="/blackboard/tutor-reviews"><h4>Reviews</h4></a></li>
      </div>
    </div>
  </div>

  <div class="class-posted">
    <div class="container">
      <div class="left">
        <h4><a href='/blackboard/tutor-reviews'>Tutor reviews</a></h4>
        <h4 id="selected_link"><a href='/blackboard/class-reviews'>Class reviews</a></h4>
      </div>

      <div class="right">
        <div class="class-review-links">
          <select onchange="javascript:location.href = this.value;">
            <option value="class-reviews">Available Reviews</option>
            <option value="class-reviews-posted" selected>Posted Reviews</option>
          </select>
        </div>
        <br>
        <div class="classReviewBox">
          <% if(postedClassReview.length < 1) { %>
            <h4>Nothing available to review yet! Start by <a href="/allclasses">booking</a> a class of your choice.</h4>
          <% } %>
          <% if(postedClassReview.length > 0) { %>
            <% postedClassReview.forEach(function(reviews){ %>
              <a href="/allclasses/<%= reviews.classID.slug %>">
                <div class="classReview">
                  <div class="top">


                    <% if(reviews.classID.mainSubject === 'Languages') { %>
                      <img src="/assets/classIllustrations/languages.png" alt="class-illustration">
                    <% } else if (reviews.classID.mainSubject === 'Math') { %>
                      <img src="/assets/classIllustrations/math.png" alt="class-illustration">
                    <% } else if (reviews.classID.mainSubject === 'Chemistry') { %>
                      <img src="/assets/classIllustrations/chemistry.png" alt="class-illustration">
                    <% } else if (reviews.classID.mainSubject === 'Physics') { %>
                      <img src="/assets/classIllustrations/physics.png" alt="class-illustration">
                    <% } else if (reviews.classID.mainSubject === 'Biology') { %>
                      <img src="/assets/classIllustrations/biology.png" alt="class-illustration">
                    <% } else { %>
                      <img src="/assets/classIllustrations/math.png" alt="class-illustration">
                    <% } %>
                  </div>
                  <div class="bottom">
                    <h4><b><%= reviews.classID.classTitle %></b></h4>
                    <div class="rateYo overallTutor" data-rating="<%= reviews.classID.overallAvg.toFixed(1) %>"></div>
                  </div>
                </div>
              </a>
            <% }); %>
          <% } %>
        </div>

      </div>
    </div>
  </div>
</div>



<% include ../../../partials/footer %>
<script src="/scripts/class/allclasses.js" type="text/javascript"></script>
